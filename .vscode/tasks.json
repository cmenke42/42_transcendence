{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compose up",
            "type": "shell",
            "command": "docker compose -f ${relativeFile} up",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                // "group": "task-group"
            },
            "icon": {
                "color": "terminal.ansiMagenta",
            }
        },
        {
            "label": "compose down",
            "type": "shell",
            "group": "none",
            "command": "docker compose -f ${relativeFile} down",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                // "group": "task-group"
            },
            "icon": {
                "color": "terminal.ansiMagenta",
            }
        },
        {
            "label": "compose rebuild",
            "type": "shell",
            "dependsOn": ["compose down", "compose up"],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "icon": {
                "color": "terminal.ansiMagenta",
            }
        }
    ]
}